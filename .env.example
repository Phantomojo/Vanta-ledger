# Database Configuration
MONGO_URI=mongodb://localhost:27017/<DATABASE_NAME>
POSTGRES_URI=postgresql://<POSTGRES_USER>:<POSTGRES_PASSWORD>@localhost:5432/<DATABASE_NAME>
REDIS_URI=redis://localhost:6379/0
DATABASE_NAME=<DATABASE_NAME>
POSTGRES_DB=<DATABASE_NAME>
POSTGRES_USER=<POSTGRES_USER>
POSTGRES_PASSWORD=<POSTGRES_PASSWORD>

# Security - Generated secure key
SECRET_KEY=<SECRET_KEY>

# Application Configuration
DEBUG=False
HOST=0.0.0.0
PORT=8500
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# File Storage
UPLOAD_DIR=./data/uploads
PROCESSED_DOCUMENTS_DIR=./data/processed_documents
MAX_FILE_SIZE=10485760

# Cache
CACHE_DURATION=300

# Pagination
DEFAULT_PAGE_SIZE=100
MAX_PAGE_SIZE=1000

# CORS - Development
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Admin User Configuration
ADMIN_PASSWORD=<SET_STRONG_PASSWORD_12_CHARS_MIN>
AUNTIE_PASSWORD=<SET_STRONG_PASSWORD_12_CHARS_MIN>

# Environment
ENVIRONMENT=production
