# Project Settings
PROJECT_NAME="Vanta Ledger"
PROJECT_DESCRIPTION="Digital Business Management System"
PROJECT_VERSION="2.0.0"

# API Settings
API_V1_STR="/api/v1"
SECRET_KEY="change-me-to-a-secure-secret-key"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days
REFRESH_TOKEN_EXPIRE_DAYS=30

# Security
SECURITY_BCRYPT_ROUNDS=12
BACKEND_CORS_ORIGINS=["http://localhost:5173","http://127.0.0.1:5173"]

# Password Policy
MIN_PASSWORD_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=24

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Session Settings
SESSION_COOKIE_NAME="vanta_ledger_session"
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SECURE=false  # Set to true in production with HTTPS
SESSION_COOKIE_SAMESITE="lax"

# CSRF Protection
CSRF_COOKIE_NAME="csrftoken"
CSRF_COOKIE_HTTPONLY=false
CSRF_COOKIE_SECURE=false  # Set to true in production with HTTPS
CSRF_HEADER_NAME="X-CSRFToken"

# Database
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=vanta_ledger

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password
REDIS_DB=0

# Paperless-ngx Integration
PAPERLESS_URL="http://localhost:8000"
PAPERLESS_USERNAME=your-paperless-username
PAPERLESS_PASSWORD=your-paperless-password

# First Superuser (used during initial setup)
FIRST_SUPERUSER=admin@vanta-ledger.com
FIRST_SUPERUSER_PASSWORD=change-me-to-a-secure-password

# Email Settings
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.example.com
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
EMAILS_FROM_EMAIL=noreply@vanta-ledger.com
EMAILS_FROM_NAME="Vanta Ledger"

# Security Headers
SECURE_HSTS_SECONDS=31536000  # 1 year
SECURE_CONTENT_TYPE_NOSNIFF=true
SECURE_BROWSER_XSS_FILTER=true
X_FRAME_OPTIONS="DENY"

# Logging
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# File Uploads
UPLOAD_FOLDER="./uploads"
MAX_CONTENT_LENGTH=16777216  # 16MB

# Application Settings
DEBUG=false

# Feature Flags
ENABLE_REGISTRATION=false  # Disable open registration by default
REQUIRE_EMAIL_VERIFICATION=true
