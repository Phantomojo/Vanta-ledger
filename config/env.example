# Vanta Ledger Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Individual Database Credentials
POSTGRES_DB=vanta_ledger
POSTGRES_USER=vanta_user
POSTGRES_PASSWORD=your_secure_postgres_password_here
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=your_secure_mongo_password_here
REDIS_PASSWORD=your_secure_redis_password_here

# PostgreSQL Configuration
POSTGRES_URI=postgresql://vanta_user:${POSTGRES_PASSWORD}@localhost:5432/vanta_ledger

# MongoDB Configuration
MONGO_URI=mongodb://admin:${MONGO_INITDB_ROOT_PASSWORD}@localhost:27017/vanta_ledger?authSource=admin

# Redis Configuration (Optional)
REDIS_URI=redis://:${REDIS_PASSWORD}@localhost:6379

# =============================================================================
# ADMIN USER CREDENTIALS
# =============================================================================

# Initial Admin Users (for setup only - change after first login)
ADMIN_PASSWORD=your_secure_admin_password_here_min_12_chars
AUNTIE_PASSWORD=your_secure_auntie_password_here_min_12_chars

# =============================================================================
# AI/LLM CONFIGURATION
# =============================================================================

# Enable/disable optional integrations
ENABLE_LOCAL_LLM=false
ENABLE_GITHUB_MODELS=true
# GitHub Models token (set this to enable AI-powered analysis via /github-models and /health/system/ai)
# You can also use GITHUB_TOKEN. If neither is set, the service stays disabled safely.
GITHUB_MODELS_TOKEN=your_github_models_token_here

# Multi-GitHub Models Configuration
ACTIVE_GITHUB_MODELS=gpt-4o-mini,claude-3-haiku,gemini-1.5-flash
ENABLE_MULTI_GITHUB_MODELS=true

# OpenAI Configuration (optional)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Configuration (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini Configuration (optional)
GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration
SECRET_KEY=your_super_secret_key_here_make_it_long_and_random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Settings
VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# System Monitor Settings
MONITOR_CHECK_INTERVAL=60
MAX_RESTART_ATTEMPTS=3

# Performance Thresholds
CPU_WARNING_THRESHOLD=80
CPU_CRITICAL_THRESHOLD=90
MEMORY_WARNING_THRESHOLD=85
MEMORY_CRITICAL_THRESHOLD=95
DISK_WARNING_THRESHOLD=90
DISK_CRITICAL_THRESHOLD=95

# =============================================================================
# PRODUCTION AI SYSTEM CONFIGURATION
# =============================================================================

# Worker Configuration
MAX_WORKERS=4
BATCH_SIZE=10

# Processing Configuration
PROCESSING_TIMEOUT=300
MAX_RETRIES=3

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Levels
LOG_LEVEL=INFO
LOG_FILE=./logs/vanta_ledger.log

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================

# SMTP Configuration for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_TLS=true

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================

# Prometheus Metrics (Optional)
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Sentry Error Tracking (Optional)
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Mode (set to true for development)
DEV_MODE=false

# Auto-reload (development only)
AUTO_RELOAD=false

# =============================================================================
# NOTES
# =============================================================================

# 1. Replace all "your_*_here" values with actual credentials
# 2. Keep this file secure and never commit it to version control
# 3. Use strong, unique passwords for production
# 4. Consider using a secrets management service for production
# 5. Regularly rotate API keys and passwords 