# Production Environment Configuration
# Copy this to .env and update with your actual values

# Application
DEBUG=False
HOST=0.0.0.0
PORT=8500

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-super-secret-production-key-change-this-immediately
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database - Update with your production database credentials
MONGO_URI=mongodb://username:password@localhost:27017/vanta_ledger?authSource=admin
POSTGRES_URI=postgresql://username:password@localhost:5432/vanta_ledger
REDIS_URI=redis://:password@localhost:6379/0
DATABASE_NAME=vanta_ledger

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# File Storage
UPLOAD_DIR=/var/vanta-ledger/uploads
PROCESSED_DOCUMENTS_DIR=/var/vanta-ledger/processed_documents
MAX_FILE_SIZE=10485760

# Cache
CACHE_DURATION=300

# Pagination
DEFAULT_PAGE_SIZE=100
MAX_PAGE_SIZE=1000

# CORS - Update with your production domain
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/vanta-ledger/app.log 

# --- AI / GitHub Models (optional) ---
ENABLE_LOCAL_LLM=False
ENABLE_GITHUB_MODELS=True
# Set either GITHUB_MODELS_TOKEN or GITHUB_TOKEN to enable AI-powered analysis endpoints
GITHUB_MODELS_TOKEN=your_github_models_token_here

# --- Safety flags ---
# In production this should be False to fail fast if DB URIs are missing
ALLOW_MISSING_DATABASES=False