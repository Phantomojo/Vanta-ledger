modules = ["python-3.10", "nodejs-20"]

[nix]
channel = "stable-24_05"
packages = ["glibcLocales", "libxcrypt"]

[deployment]
run = ["sh", "-c", "uvicorn undefined:app --host 0.0.0.0 --port 3000"]

[workflows]
runButton = "Start Backend API"

[[workflows.workflow]]
name = "Start Backend API"
author = 33280088
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd src && python run_server.py"

[[workflows.workflow]]
name = "Start Web Dashboard"
author = 33280088
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend-web && npm install && npm run dev"

[[workflows.workflow]]
name = "Setup Database"
author = 33280088
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python simple_db_setup.py"
