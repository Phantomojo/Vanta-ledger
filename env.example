# Vanta Ledger Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=sqlite:///./vanta_ledger.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/vanta_ledger

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Default User Passwords (change these in production)
ADMIN_PASSWORD=admin123
AUNTIE_PASSWORD=auntie123

# Server Configuration
HOST=0.0.0.0
PORT=8500

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=uploads

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080 